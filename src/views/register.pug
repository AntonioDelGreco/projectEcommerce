extends layout/index
block content
  div.container
    h1 Register 
    form(action="/api/users/register", method="POST")
      .row.mb-3
        label.col-sm-2.col-form-label(for='name') Name
        .col-sm-10
          input#inputEmail3.form-control(type='text', placeholder="Your name", name="name")
      .row.mb-3
        label.col-sm-2.col-form-label(for='password') Password
        .col-sm-10
          input#inputEmail3.form-control(type='password', placeholder="Your password", name="password")
      .row.mb-3
        label.col-sm-2.col-form-label(for='email') Email
        .col-sm-10
          input#inputPassword3.form-control(type='email', placeholder="Your email", name="email")
      fieldset.row.mb-3
        .row.mb-3
          .col-sm-10.offset-sm-2
            .form-check
        button.btn.btn-dark(type='submit') Register